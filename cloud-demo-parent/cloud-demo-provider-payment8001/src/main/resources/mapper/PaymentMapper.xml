<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learn.springcloud.dao.PaymentDao">
    <resultMap id="ResultMap" type="com.learn.springcloud.entities.Payment">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="serial" jdbcType="VARCHAR" property="serial"/>
    </resultMap>
    <sql id="Column_List">
      id,serial
    </sql>
    <select id="getPaymentById" parameterType="java.lang.Long" resultMap="ResultMap">
      select
      <include refid="Column_List"/>
      from payment
      where id=#{id,jdbcType=BIGINT}
    </select>
    <insert id="createPayment" useGeneratedKeys="true" keyProperty="id" parameterType="com.learn.springcloud.entities.Payment">
        insert into payment(serial) values (#{serial})
    </insert>
</mapper>
    